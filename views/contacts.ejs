<!-- @format -->

<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Contact List</h2>

      <a href="/contact/add" class="btn btn-success mb-2 badge"><i class="bi bi-plus-circle"></i> Add Contact</a>

      <% if (msg.length !== 0 ) { %>
        <div class="alert alert-success" role="alert"><%= msg  %>  <i class="bi bi-check-circle"></i> </div>
      <% } %>

        <% if (pesan.length !== 0) { %>
          <div class="alert alert-danger" role="alert"><%= pesan %>  <i class="bi bi-trash"></i></i> </div>
        <% } %>


      <table class="table">
        <thead>
          <tr>
            <th scope="col">No</th>
            <th scope="col">Nama</th>
            <th scope="col">No Hp</th>
            <th scope="col">Aksi</th>
          </tr>
        </thead>
        <tbody>
          <% if (contacts.length < 1) { %>
          <tr>
            <td colspan="4">
              <div class="alert alert-danger" role="alert">
                Data contact masih kosong
                
            </td>
          </tr>
          <% } %> <% contacts.forEach((contact,i) => { %>
          <tr>
            <th scope="row"><%= i + 1 %></th>
            <td><%= contact.nama %></td>
            <td><%= contact.nohp %></td>
            <td>
              <a href="/contact/<%= contact.nama %> " class="btn btn-success badge rounded-pill"><i class="bi bi-info-circle"></i> detail</a>
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>
